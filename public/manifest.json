{
  "manifest_version": 3,
  "name": "TabHopper",
  "version": "1.0",
  "description": "Manage your tabs efficiently with auto categorization, snoozing, and quick switching.",
  "permissions": ["tabs", "activeTab", "storage", "alarms"],
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "commands": {
    "quick-switch": {
      "suggested_key": {
        "default": "Ctrl+Shift+K"
      },
      "description": "Quick switch between tabs"
    }
  }
}
